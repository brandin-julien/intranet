{% extends 'base.html.twig' %}

{% block body %}

    <h1>Promote</h1>

    {% if app.session.flashbag.get('success') is not empty %}
        <div class="alert alert-success">
            {% for message in app.session.flashbag.get('success') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% elseif app.session.flashbag.get('error') is not empty %}
        <div class="alert alert-danger">
            {% for message in app.session.flashbag.get('error') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endif %}

    {#
    <div class="alert alert-success">
    {% for message in app.session.flashbag.get('info') %}
        <p>{{ message }}</p>
      {% endfor %}
    </div>
    #}

    <form action="{{ path("promote") }}" id="promoteForm" name="promoteForm" method="post">

        <label for="user">user</label>

        <select name="user">
            {% for user in users %}
                <option value="{{ user.id }}">{{ user.username }}({{ user.roles | first }})</option>
            {% endfor %}
        </select>

        <br>

        <label for="role">role</label>

        <select name="role">
            <option value="ROLE_USER">student</option>
            <option value="ROLE_ADMIN">admin</option>
            <option value="ROLE_SUPER_ADMIN">super admin</option>
        </select>

        <br>

        <input type="submit" class="btn btn-success">

    </form>

{% endblock %}
